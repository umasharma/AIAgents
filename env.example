# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=repository_name

# OpenAI Configuration (for LLM decision making)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Code Analysis Tools
SEMGREP_APP_TOKEN=your_semgrep_token_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Analysis Configuration
MAX_CONCURRENT_SCANS=5
ANALYSIS_TIMEOUT=300
ENABLE_BANDIT=true
ENABLE_SEMGREP=true
ENABLE_SAFETY=true
ENABLE_PIP_AUDIT=true
ENABLE_VULTURE=true

# Report Configuration
REPORT_FORMAT=markdown
INCLUDE_SUGGESTIONS=true
INCLUDE_SEVERITY_SCORES=true

# GitHub PR Configuration
CREATE_PR_AUTOMATICALLY=false
PR_BRANCH_PREFIX=code-hygiene-
PR_TITLE_PREFIX=[Code Hygiene]
PR_REVIEWER_TEAMS=security-team,platform-team